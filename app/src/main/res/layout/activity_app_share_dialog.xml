<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daily_word_dialog_layout"
    android:layout_width="600dp"
    android:layout_height="400dp"
    android:background="@color/dialog">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/dialog_share_title"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <!-- Question 1 -->
    <TextView
        android:id="@+id/question_1_text"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_test_question_1"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="50dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"/>

    <Button
        android:id="@+id/question_1_text_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_text_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_1_text"
        app:layout_constraintEnd_toStartOf="@id/question_1_mp3_button"
        app:layout_constraintTop_toTopOf="@id/question_1_text"/>

    <Button
        android:id="@+id/question_1_mp3_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_mp3_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_1_text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/question_1_text"/>

    <!-- Question 2 -->
    <TextView
        android:id="@+id/question_2_text"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_test_question_2"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="50dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_1_text"/>

    <Button
        android:id="@+id/question_2_text_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_text_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_2_text"
        app:layout_constraintEnd_toStartOf="@id/question_2_mp3_button"
        app:layout_constraintTop_toTopOf="@id/question_2_text"/>

    <Button
        android:id="@+id/question_2_mp3_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_mp3_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_2_text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/question_2_text"/>

    <!-- Question 3 -->
    <TextView
        android:id="@+id/question_3_text"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_test_question_3"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="50dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_2_text"/>

    <Button
        android:id="@+id/question_3_text_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_text_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_3_text"
        app:layout_constraintEnd_toStartOf="@id/question_3_mp3_button"
        app:layout_constraintTop_toTopOf="@id/question_3_text"/>

    <Button
        android:id="@+id/question_3_mp3_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_mp3_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_3_text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/question_3_text"/>

    <!-- Question 4 -->
    <TextView
        android:id="@+id/question_4_text"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_test_question_4"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="50dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_3_text"/>

    <Button
        android:id="@+id/question_4_text_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_text_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_4_text"
        app:layout_constraintEnd_toStartOf="@id/question_4_mp3_button"
        app:layout_constraintTop_toTopOf="@id/question_4_text"/>

    <Button
        android:id="@+id/question_4_mp3_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_mp3_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_4_text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/question_4_text"/>

    <TextView
        android:id="@+id/question_all_text"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_test_question_all"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="50dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_4_text"/>

    <Button
        android:id="@+id/question_all_text_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_text_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_all_text"
        app:layout_constraintEnd_toStartOf="@id/question_all_mp3_button"
        app:layout_constraintTop_toTopOf="@id/question_all_text"/>

    <Button
        android:id="@+id/question_all_mp3_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/spa_mp3_share"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/question_all_text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/question_all_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>