<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grammar_test_page_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GrammarMain">

    <TextView
        android:id="@+id/grammar_test_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/main_page_sub_title_grammar_practice"
        android:textSize="100sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/grammar_test_page_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/grammar_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/grammar_3_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_3"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_03"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="be 동사"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Grammar 4 -->
            <LinearLayout
                android:id="@+id/grammar_4_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_4"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_04"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="일반동사"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Grammar 5 -->
            <LinearLayout
                android:id="@+id/grammar_5_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_5"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_05"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="일반동사의 과거형"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grammar_6_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_6"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_06"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="현재완료 시제"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grammar_7_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_7"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_07"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="미래시제"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grammar_8_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_8"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_08"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="비교급과 최상급"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- 세 번째 줄 (Grammar 9~12) -->
            <LinearLayout
                android:id="@+id/grammar_9_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_9"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_08"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="동명사/TO부정사"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grammar_10_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_10"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_08"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="관계대명사"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grammar_11_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_11"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_08"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="관계부사"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grammar_12_layout"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammar_12"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/grammar_ui_08"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="전치사/접속사"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>