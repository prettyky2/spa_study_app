<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spa_examination_hall_result_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SpaExaminationHall">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/daily_spa_examination_hall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spa_examination_result_title"
        android:textSize="70sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- 스크롤이 필요한 영역 -->
    <ScrollView
        android:id="@+id/scrollable_section"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/daily_spa_examination_hall_title"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical">

            <!-- 스크롤 가능한 내용 추가 -->
            <TextView
                android:id="@+id/answer_sheet_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 1"
                android:textColor="@color/black"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/answer_sheet_answer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 1"
                android:textColor="@color/black"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/answer_sheet_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 2"
                android:textColor="@color/black"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/answer_sheet_answer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 1"
                android:textColor="@color/black"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/answer_sheet_question_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 1"
                android:textColor="@color/black"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/answer_sheet_answer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 1"
                android:textColor="@color/black"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/answer_sheet_question_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 2"
                android:textColor="@color/black"
                android:textSize="28sp"/>

            <ImageView
                android:id="@+id/answer_sheet_image_1"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/graph_1_bar_1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/answer_sheet_answer_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="스크롤이 적용될 내용 1"
                android:textColor="@color/black"
                android:textSize="23sp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/answer_sheet_record_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="♪1"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/answer_sheet_record_2"/>

    <Button
        android:id="@+id/answer_sheet_record_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="♪2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/answer_sheet_record_1"
        app:layout_constraintEnd_toStartOf="@id/answer_sheet_record_3"/>

    <Button
        android:id="@+id/answer_sheet_record_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="♪3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/answer_sheet_record_2"
        app:layout_constraintEnd_toStartOf="@id/answer_sheet_record_4"/>

    <Button
        android:id="@+id/answer_sheet_record_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="♪4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/answer_sheet_record_3"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

